body {
  padding: 50px;
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
}

* {
  box-sizing: border-box;
}

a {
  color: #666;
  text-decoration: none;
}

nav {
  width: 100%;
  float: left;
  background: white;
  border-bottom: 1px solid #eee;
  a {
    color: #00B7FF;
    padding: 10px;
    display: inline-block;
  }
  [href="/standings"] {
    display: none;
  }
}

ul {
  list-style: none;
  padding-left: 0;
}

.videos {
  display: flex;
  flex-flow: row wrap;
  padding-right: 25%;
}

.video {
  width: 200px;
  height: auto;
  margin: 0 20px 30px 0;
  img {
    width: 100%;
  }
  .title {
    font-size: 0.8rem;
    color: #666;
    display: block;
  }
  .date {
    color: #aaa;
    font-size: 0.7rem;
  }
}

.standings {
  float: none;
  overflow: hidden;
  background: #fff;
  width: 25%;
  position: absolute;
  right: 25px;
  top: 35px;

  h2 {
    margin-top: 0;
  }
  ol li:nth-of-type(8) {
    margin-bottom: 10px;
  }
  .team {
    width: 120px;
    display: inline-block;
  }
  .win, .lose {
    width: 30px;
    display: inline-block;
  }
  .win {
    color: #006600;
  }
  .lose {
    color: #880000;
  }
}

.video-player {
  width: calc(100% - 300px);
}
.header {
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 1;
}

activeNav() {
  background: #eee;
  color: #555;
}

@media only screen and (max-width: 500px) {
  body {
    margin: 0;
    padding: 0;
    padding-top: 35px;
  }
  h1 {
    display: none;
  }
  nav {
    width: 100%;
    display: flex;
    justify-content: center;
    background: white;
    border-bottom: 1px solid #eee;
    &.highlights {
      .highlights {
        activeNav();
      }
    }
    &.top-10 {
      .top-10 {
        activeNav();
      }
    }
    &.score {
      .score {
        activeNav();
      }
    }
    a {
      flex: 1;
      padding: 10px;
      text-align: center;
      border-right: 1px solid #eee;
      color: #999;
      &:after {
        display: none;
      }
      &:last-of-type {
        border-right: none;
      }
    }
    [href="/standings"] {
      display: block;
    }
  }
  .video-player {
    width: 100%;
  }
  .date-header {
    padding: 0 10px;
  }
  .standings {
    float: none;
    overflow: hidden;
    width: 100%;
    background: #fff;
    position: static;

    h2 {
      font-size: 1rem;
      text-align: right;
      text-decoration: underline;
      margin-bottom: 5px;
      cursor: pointer;
      color: #00B7FF;
    }
    h4 {
      margin: 5px 0;
    }
    .content.show {
      display: block;
    }
    .content {
      display: none;
      font-size: 0.7rem;
      padding: 10px;
      ol {
        padding-left: 20px;
      }
      .team {
        width: 85px;
      }
      .win, .lose {
        width: 20px;
      }
    }
    .eastern {
      margin-right: 10px;
    }
    .eastern, .western {
      float: left;
      width: 48%;
    }
  }
  .videos {
    display: block;
    padding-right: 0;
  }
  .video {
    width: 100%;
    margin: 0;
    overflow: hidden;
    position: relative;
    img {
      float: left;
    }
    a {
      display: block;
    }
    .title {
      font-size: 16px;
      color: white;
      font-weight: bold;
    }
    .date {
      font-size: 13px;
      color: white;
    }
    .info {
      position: absolute;
      background: rgba(0,0,0,0.6);
      bottom: 0;
      left: 0;
      padding: 5px;
    }
  }
  .video:nth-child(even) {
    margin-right: 0;
  }
}

.today-score {
  .score-day {
    float: left;
  }
  .team {
    display: inline-block;
    width: 130px;
    margin-bottom: 5px;
  }
  .win {
    font-weight: bold;
  }
  .lose {
    color: #666;
  }
}
